<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/benvenuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/home"
        />

    <TextView
        android:id="@+id/ituoidati"
        android:layout_width="180sp"
        android:layout_height="30sp"
        android:text="@string/i_tuoi_dati"
        android:paddingLeft="20sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/benvenuto"
        />
    <ImageView
        android:id="@+id/adminImage"
        android:layout_width="180sp"
        android:layout_height="30sp"
        android:layout_below="@+id/benvenuto"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/usernameStaticShow"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:paddingTop="30sp"
        android:paddingLeft="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/ituoidati"
        />
    <TextView
        android:id="@+id/usernameShow"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="30sp"
        android:paddingLeft="30sp"
        android:textSize="20sp"
        android:layout_below="@+id/ituoidati"
        android:layout_toRightOf="@+id/usernameStaticShow"
        />
    <TextView
        android:id="@+id/passwordStaticShow"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:paddingTop="30sp"
        android:paddingLeft="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/usernameShow"
        />
    <TextView
        android:id="@+id/passwordShow"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="30sp"
        android:paddingLeft="30sp"
        android:textSize="20sp"
        android:layout_below="@+id/usernameStaticShow"
        android:layout_toRightOf="@+id/passwordStaticShow"
        />
    <TextView
        android:id="@+id/cittaStaticShow"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:text="CittÃ : "
        android:paddingTop="30sp"
        android:paddingLeft="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/passwordShow"
        />
    <TextView
        android:id="@+id/cittaShow"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="30sp"
        android:paddingLeft="30sp"
        android:textSize="20sp"
        android:layout_below="@+id/passwordShow"
        android:layout_toRightOf="@+id/passwordStaticShow"
        />
    <TextView
        android:id="@+id/dataStaticShow"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:text="Data di nascita: "
        android:paddingTop="30sp"
        android:paddingLeft="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/cittaShow"
        />
    <TextView
        android:id="@+id/dataShow"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="30sp"
        android:paddingLeft="30sp"
        android:textSize="20sp"
        android:layout_below="@+id/cittaShow"
        android:layout_toRightOf="@+id/dataStaticShow"
        />
    <ImageView
        android:id="@+id/avatarHome"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/dataShow"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/gestisciUtenti"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:layout_below="@+id/avatarHome"
        android:layout_marginTop="10sp"
        android:text="Gestisci utenti"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />
    <Button

        android:id="@+id/logout"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:layout_below="@+id/gestisciUtenti"
        android:layout_marginTop="10sp"
        android:text="Logout"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />
    <Button

        android:id="@+id/back"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:layout_below="@+id/logout"
        android:layout_marginTop="10sp"
        android:text="Indietro"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Modifica password"
        android:textAlignment="center"
        android:layout_below="@+id/back"
        android:layout_marginTop="20sp"
        android:textColor="@color/palette1"
        android:gravity="center_horizontal" />



</RelativeLayout>
